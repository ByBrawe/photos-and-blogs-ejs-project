    <!-- blog -->

  <!-- blog -->

  <div class="container" style="margin-top: 5rem">
    <div class="row">
      <div class="col-md-8" style="word-wrap: break-word">
       
        <div class="card border-0">
          
          
          <div class="card border-0">
            <div class="d-flex">
              <div class="card-body border-0">
                <h2 class="card-title"><%= blog.title %></h2>
                <small class="text-muted" style="padding-right: 0.5px">
                  <h6 class="text-muted">
                    <span>Tarih: <%= blog.createdAt.toLocaleDateString() %></span>
                    <span>Kategori: <%= blog.categories %></span>
                    <span>Author: <%= blog.user.username%></span>

                    <i class="fa fa-eye"></i> 1347
                    <i class="fa fa-comment"></i> <%= comments.comments.length%>
                  </h6>
                </small>

                
                  <img
                    src="<%= blog.url %>"
                    class="figure-img mx-auto d-block"
                    style="margin: 1em; margin-top: 1.5em;"
                    alt="A."
                  />
                

                <p class="card-text" style="margin-bottom: 2.5em">
                  <%= blog.content %>
                </p>
                <!-- <a href="#" class="btn btn-primary float-right">read more</a> -->
              </div>
            </div>
          </div>
          
          
<!-- Yorumlar -->
          <div class="card border-0">
            
              <div class="card border-0">
                <div class="card-header text-black bg-white">
                  <h1>Comments</h1>
                </div>
                
                <ul>



                </ul>

              <% for(comment of comments.comments){%>
              <div class="d-flex">          

              <div class="figure  col-md-2 " ><img src="/images/avatar.png" alt="user" width="100px" height="100px" class="rounded-circle mx-auto d-block" style="margin-top: 10px;"></div>
           
              <div class="card-body col-md-10 ">
                <h2 class="card-title" ><%= comment.user.username%></h2>
                <!-- <small class="text-muted" style="padding-right: 0.5px">
                  <h6 class="text-muted">
                    <span>Tarih: 12.10.2023</span>
                    <span>Kategori: photo</span>
                    <i class="fa fa-eye"></i> 1347
                    <i class="fa fa-comment"></i> 12
                  </h6>
                </small> -->
                  
                <p class="card-text" style="margin-bottom: 2.5em">
                  <%= comment.content%>
                </p>
              </div>
            </div>
            <% }%>

    
            
            </div>
          </div>

         
          
